<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodayFragment">

    <TextView
        android:id="@+id/today_todolist_none_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="NONE To Do List !"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/today_todolistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/today_todo_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="450sp"
        android:backgroundTint="@color/white"
        android:foreground="@drawable/ic_add_black_24dp"
        android:foregroundGravity="center"
        app:elevation="1dp"
        app:borderWidth="0dp" />

</FrameLayout>